<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="163dp"
    android:background="@drawable/bcg_pic"
    tools:context="com.gadgetscure.gadgetscure.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"

            android:src="@drawable/image"

            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picker"
        android:text="Update Dp"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:background="@drawable/edittext"
        android:backgroundTint="#96000000"
        android:layout_marginLeft="22.5dp"
        android:textColor="@color/white"
        android:clickable="true"
        android:layout_below="@id/dp"
        android:layout_marginTop="4dp"
            android:padding="4.5dp"

        />

<LinearLayout
   android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_below="@+id/dp"
    android:orientation="vertical"
    android:background="#4A000000">


    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Arya Stark "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#fff"

        android:layout_marginLeft="15dp"
        android:layout_marginBottom="0dp"

        />
        <!--android:background="#D7CCC8" -->

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" rishabh7awasthi@gmail.com "
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/profile_name"
        />
</LinearLayout>
    </RelativeLayout>
</LinearLayout>