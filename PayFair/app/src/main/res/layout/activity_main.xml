<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context="com.hub.rish.payfair.MainActivity">
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Scource"
        android:textSize="15sp"
        android:textColor="#000"
        />
        <EditText
            android:focusable="false"
            android:hint="           tap to write"
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"/>
    </LinearLayout>
        <Button
            android:id="@+id/srcbutton"
            android:hint="select from map"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="150dp"
            android:layout_width="180dp"
            android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Destination"
            />
        <EditText
            android:focusable="false"
            android:hint="           tap to write"
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
        <Button
            android:hint="select from map"
            android:id="@+id/destbutton"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="150dp"
            android:layout_width="180dp"
            android:layout_height="50dp" />
        <Spinner
            android:autofillHints="select Bus Type"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/bustype"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:layout_margin="20dp"/>
    </LinearLayout>
</FrameLayout>
